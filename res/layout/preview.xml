<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_1" >

    <SurfaceView
        android:id="@+id/previewSV"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

  <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top" 
        android:layout_marginTop="10dp">
         <ImageButton
             android:id="@+id/btn_flash_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sliding_btn_slider"
            android:src="@drawable/ic_flash_off_selector" />

        <ImageButton
             android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sliding_btn_slider"
            android:src="@drawable/ic_switch_photo_facing_holo_light" 
           />



        <ImageButton
             android:id="@+id/btn_fliter_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sliding_btn_slider"
           android:src="@drawable/ic_camera_skin_beatify_open"   />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/btn_cancel_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/camera_yulan" />

          <ImageButton
            android:id="@+id/btn_takephoto_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera_select"
            android:src="@drawable/btn_shutter" />

        <Button
              android:id="@+id/btn_done_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/camera_setting" />
    </RelativeLayout>

</FrameLayout>